', 'mijn') ('mijn', 'interess') ('interess', 'in') ('in', 'het') ('het', 'welzijn') ('welzijn', 'van') ('van', 'kinderen') ('kinderen', 'verder') ('verder', 'gestimuleerd') ('gestimuleerd', '.') ('.', 'Er') ('Er', 'komen') ('komen', 'steed') ('steed', 'meer') ('meer', 'berichten') ('berichten', 'over') ('over', 'problemen') ('problemen', 'van') ('van', 'kinderen') ('kinderen', 'zoal') ('zoal', 'leerproblemen') ('leerproblemen', ',') (',', 'gewichtsproblemen') ('gewichtsproblemen', ',') (',', 'en') ('en', 'geestelijk') ('geestelijk', 'en') ('en', 'lichaamelijk') ('lichaamelijk', 'mishandel') ('mishandel', 'en') ('en', 'verwaarloz') ('verwaarloz', '.') ('.', 'Ik') ('Ik', 'wil') ('wil', 'nu') ('nu', 'graag') ('graag', 'mijn') ('mijn', 'theoretisch') ('theoretisch', 'kenni') ('kenni', 'in') ('in', 'de') ('de', 'praktijk') ('praktijk', 'brengen') ('brengen', 'en') ('en', 'op') ('op', 'een') ('een', 'professionel') ('professionel', 'manier') ('manier', 'een') ('een', 'bijdragen') ('bijdragen', 'leveren') ('leveren', 'om') ('om', 'het') ('het', 'welzijn') ('welzijn', 'van') ('van', 'onz') ('onz', 'kinderen') ('kinderen', 'te') ('te', 'bevorderen') ('bevorderen', '.')