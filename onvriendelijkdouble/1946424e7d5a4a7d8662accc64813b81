resseert') ('interesseert', 'mij') ('mij', '.') ('.', 'Daarnaast') ('Daarnaast', 'volg') ('volg', 'ik') ('ik', 'al') ('al', 'een') ('een', 'aantal') ('aantal', 'jaar') ('jaar', 'het') ('het', 'meest') ('meest', 'nieuw') ('nieuw', 'over') ('over', 'politiek') ('politiek', ',') (',', 'economi') ('economi', ',') (',', 'maatschappelijk') ('maatschappelijk', 'debat') ('debat', 'en') ('en', 'uiteraard') ('uiteraard', 'de') ('de', 'ruimtelijk') ('ruimtelijk', 'indel') ('indel', 'van') ('van', 'Nederland') ('Nederland', '.') ('.', 'Over') ('Over', 'het') ('het', 'algemeen') ('algemeen', 'heb') ('heb', 'ik') ('ik', 'zelf') ('zelf', 'een') ('een', 'duidelijk') ('duidelijk', 'mene') ('mene', 'over') ('over', 'de') ('de', 'verschillend') ('verschillend', 'onderwerpen') ('onderwerpen', ',') (',', 'maar') ('maar', 'bij') ('bij', 'goed') ('goed', 'argumenten') ('argumenten', 'en') ('en', 'voortschrijdend') ('voortschrijdend', 'inzicht') ('inzicht', 'kan') ('kan', 'een') ('een', 'mene') ('mene', 'veranderen') ('veranderen', '.') ('.', 'Het') ('Het', 'is') ('is', 'immer') ('immer', 'belangrijk') ('belangrijk', 'dat') ('dat', 'een') ('een', 'goed') ('goed', 'oploss') ('oploss', 'gevonden') ('gevonden', 'wordt') ('wordt', 'voor') ('voor', 'de') ('de', 'problemen') ('problemen', 'en') ('en', 'dat') ('dat', 'vereist') ('vereist', 'samenwerk') ('samenwerk', 'tussen') ('tussen', 'verschillend') ('verschillend', 'personen') ('personen', 'en') ('en', 'vakgebieden') ('vakgebieden', '.')