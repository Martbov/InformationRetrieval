.') ('.', 'Daarnaast') ('Daarnaast', 'spreekt') ('spreekt', 'de') ('de', 'veelzijdigheid') ('veelzijdigheid', 'van') ('van', 'het') ('het', 'programma') ('programma', 'mij') ('mij', 'zeer') ('zeer', 'aan') ('aan', '.') ('.', 'Het') ('Het', 'lijkt') ('lijkt', 'me') ('me', 'ontzettend') ('ontzettend', 'leerzaam') ('leerzaam', 'en') ('en', 'interess') ('interess', 'om') ('om', 'op') ('op', 'verschillend') ('verschillend', 'plekken') ('plekken', 'binnen') ('binnen', 'een') ('een', 'ministeri') ('ministeri', 'te') ('te', 'mogen') ('mogen', 'werken') ('werken', ',') (',', 'een') ('een', 'uniek') ('uniek', 'manier') ('manier', 'om') ('om', 'mezelf') ('mezelf', 'te') ('te', 'kunnen') ('kunnen', 'ontwikkelen') ('ontwikkelen', '.') ('.', 'Ik') ('Ik', 'denk') ('denk', 'dat') ('dat', 'het') ('het', 'rijkstraineeprogramma') ('rijkstraineeprogramma', 'voor') ('voor', 'mij') ('mij', 'een') ('een', 'grote') ('grote', 'uitdag') ('uitdag', 'zal') ('zal', 'zijn') ('zijn', 'die') ('die', 'ik') ('ik', 'vol') ('vol', 'enthousiasm') ('enthousiasm', 'zal') ('zal', 'aanpakken') ('aanpakken', '!') ('!', 'Door') ('Door', 'mijn') ('mijn', 'interess') ('interess', 'voor') ('voor', 'maatschappij') ('maatschappij', 'en') ('en', 'politiek') ('politiek', 'besloot') ('besloot', 'ik') ('ik', 'na') ('na', 'het') ('het', 'VWO') ('VWO', 'bestuurskund') ('bestuurskund', 'te') ('te', 'gaan') ('gaan', 'studeren') ('studeren', 'en') ('en', 'later') ('later', 'ook') ('ook', 'politicologi') ('politicologi', '.') ('.', 'Deze') ('Deze', 'studi') ('studi', 'hebben') ('hebben', 'mij') ('mij', 'geleerd') ('geleerd', 'om') ('om', 'vanuit') ('vanuit', 'verschillend') ('verschillend', 'perspectieven') ('perspectieven', 'te') ('te', 'kijken') ('kijken', 'naar') ('naar', 'maatschappelijk') ('maatschappelijk', 'vraagstukken') ('vraagstukken', '.') ('.', 'Deze') ('Deze', 'vraagstukken') ('vraagstukken', 'zijn') ('zijn', 'nooit') ('nooit', 'zwart-wit') ('zwart-wit', '.') ('.', 'Dat') ('Dat', 'is') ('is', 'wat') ('wat', 'm