mijn') ('mijn', 'verder') ('verder', 'loopbaan') ('loopbaan', '.') ('.', 'Mijn') ('Mijn', 'interess') ('interess', 'voor') ('voor', 'maatschappelijk') ('maatschappelijk', 'kwesti') ('kwesti', 'is') ('is', 'met') ('met', 'name') ('name', 'gericht') ('gericht', 'op') ('op', 'het') ('het', 'gebi') ('gebi', 'van') ('van', 'onderwij') ('onderwij', ',') (',', 'cultuur') ('cultuur', ',') (',', 'social') ('social', 'zaken') ('zaken', 'en') ('en', 'welzijn') ('welzijn', '.') ('.', 'Dit') ('Dit', 'is') ('is', 'niet') ('niet', 'alleen') ('alleen', 'te') ('te', 'zien') ('zien', 'aan') ('aan', 'mijn') ('mijn', 'studiekeuz') ('studiekeuz', 'maar') ('maar', 'ook') ('ook', 'aan') ('aan', 'mijn') ('mijn', 'werkervaringen') ('werkervaringen', 'en') ('en', 'nevenactiviteiten') ('nevenactiviteiten', '.') ('.', 'Zo') ('Zo', 'werk') ('werk', 'ik') ('ik', 'bij') ('bij', 'Gener') ('Gener', 'R') ('R', ',') (',', 'waar') ('waar', 'onderzoek') ('onderzoek', 'wordt') ('wordt', 'gedaan') ('gedaan', 'naar') ('naar', 'invloeden') ('invloeden', 'tijden') ('tijden', 'de') ('de', 'zwangerschap') ('zwangerschap', 'op') ('op', 'de') ('de', '(') ('(', 'hersen') ('hersen', ')') (')', 'ontwikkel') ('ontwikkel', 'van') ('van', 'kinderen') ('kinderen', '.') ('.', 'In') ('In', 'Zuid-Afrika') ('Zuid-Afrika', 'heb') ('heb', 'ik') ('ik', 'meegewerkt') ('meegewerkt', 'aan') ('aan', 'gemeenschaps-ontwikkelingsproject') ('gemeenschaps-ontwikkelingsproject', '.') ('.', 'Hierbij') ('Hierbij', 'organiseerd') ('organiseerd', 'ik') ('ik', 'naschool') ('naschool', 'activiteiten') ('activiteiten', 'voor') ('voor', 'basisschool-leerlingen') ('basisschool-leerlingen', 'waarbij') ('waarbij', 'leerlingen') ('leerlingen', 'algemen') ('algemen', 'vaardigheden') ('vaardigheden', 'en') ('en', 'bijl') ('bijl', 'kregen') ('kregen', ',') (',', 'maar') ('maar', 'waar') ('waar', 'spel') ('spel', 'en') ('en', 'zang') ('zang', 'centraal') ('centraal', 'stonden') ('stonden', '.') ('.', 'Teven') ('Teven', 'heb') ('heb', 'ik') ('ik', 'ge