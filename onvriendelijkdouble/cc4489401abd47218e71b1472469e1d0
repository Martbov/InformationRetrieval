') ('mijn', 'keuz') ('keuz', 'om') ('om', 'een') ('een', 'zomer') ('zomer', 'vrijwilligerswerk') ('vrijwilligerswerk', 'in') ('in', 'Marokko') ('Marokko', 'te') ('te', 'doen') ('doen', ',') (',', 'een') ('een', 'bijbaantj') ('bijbaantj', 'in') ('in', 'de') ('de', 'thuiszorg') ('thuiszorg', 'te') ('te', 'nemen') ('nemen', ',') (',', 'stage') ('stage', 'te') ('te', 'lopen') ('lopen', 'op') ('op', 'het') ('het', 'gebi') ('gebi', 'van') ('van', 'mensenrechten-') ('mensenrechten-', 'en') ('en', 'vluchtelingenbescherm') ('vluchtelingenbescherm', 'en') ('en', 'lid') ('lid', 'te') ('te', 'worden') ('worden', 'van') ('van', 'een') ('een', 'politiek') ('politiek', 'partij') ('partij', '.') ('.', 'Naast') ('Naast', 'het') ('het', 'volgen') ('volgen', 'van') ('van', 'het') ('het', 'dagelijks') ('dagelijks', 'nieuw') ('nieuw', 'volg') ('volg', ',') (',', 'inform') ('inform', 'ik') ('ik', 'mijzelf') ('mijzelf', 'over') ('over', 'de') ('de', 'achtergronden') ('achtergronden', 'van') ('van', 'het') ('het', 'nieuw') ('nieuw', 'en') ('en', 'maatschappelijk') ('maatschappelijk', 'vraagstukken') ('vraagstukken', 'door') ('door', 'middel') ('middel', 'van') ('van', 'weekbladen') ('weekbladen', 'zoal') ('zoal', 'de') ('de', 'Economist') ('Economist', ',') (',', 'boeken') ('boeken', 'en') ('en', 'documentair') ('documentair', '.') ('.', 'Ook') ('Ook', 'vanuit') ('vanuit', 'Genev') ('Genev', 'ben') ('ben', 'ik') ('ik', 'de') ('de', 'politiek') ('politiek', 'en') ('en', 'maatschappelijk') ('maatschappelijk', 'ontwikkelingen') ('ontwikkelingen', 'in') ('in', 'Nederland') ('Nederland', 'actief') ('actief', 'blijven') ('blijven', 'volgen') ('volgen', 'via') ('via', 'de') ('de', 'NRC') ('NRC', 'en') ('en', 'de') ('de', 'Volkskrant') ('Volkskrant', '.')