') ('ik', 'iet') ('iet', 'doe') ('doe', 'wat') ('wat', 'maatschappelijk') ('maatschappelijk', 'belang') ('belang', 'heeft') ('heeft', '.') ('.', 'Graag') ('Graag', 'wil') ('wil', 'ik') ('ik', 'de') ('de', 'tijd') ('tijd', 'in') ('in', 'het') ('het', 'Rijkstraineeprogramma') ('Rijkstraineeprogramma', 'gebruiken') ('gebruiken', 'om') ('om', 'mezelf') ('mezelf', 'te') ('te', 'ontwikkelen') ('ontwikkelen', 'en') ('en', 'een') ('een', 'bijdrag') ('bijdrag', 'te') ('te', 'leveren') ('leveren', 'aan') ('aan', 'onz') ('onz', 'maatschappij') ('maatschappij', '.')