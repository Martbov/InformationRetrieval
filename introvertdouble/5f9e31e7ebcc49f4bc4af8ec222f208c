') ('het', 'RTP') ('RTP', 'inzicht') ('inzicht', 'bieden') ('bieden', 'in') ('in', 'mijn') ('mijn', 'kwaliteiten') ('kwaliteiten', 'en') ('en', 'voorkeuren') ('voorkeuren', '.') ('.', 'Maatschappelijk') ('Maatschappelijk', 'relevanti') ('relevanti', 'heeft') ('heeft', 'een') ('een', 'doorslaggevend') ('doorslaggevend', 'rol') ('rol', 'gespeeld') ('gespeeld', 'in') ('in', 'mijn') ('mijn', 'studiekeuz') ('studiekeuz', '.') ('.', 'Om') ('Om', 'die') ('die', 'reden') ('reden', 'ben') ('ben', 'ik') ('ik', 'bestuurskund') ('bestuurskund', 'gaan') ('gaan', 'studeren') ('studeren', '.') ('.', 'Ik') ('Ik', 'ben') ('ben', 'geinteresseerd') ('geinteresseerd', 'in') ('in', 'het') ('het', 'onderzoeken') ('onderzoeken', 'en') ('en', 'analyseren') ('analyseren', 'van') ('van', 'maatschappelijk') ('maatschappelijk', 'verschijnselen') ('verschijnselen', ',') (',', 'in') ('in', 'het') ('het', 'bijzond') ('bijzond', 'veiligheidsvraagstukken') ('veiligheidsvraagstukken', '.') ('.', 'Daarnaast') ('Daarnaast', 'vind') ('vind', 'ik') ('ik', 'het') ('het', 'belangrijk') ('belangrijk', 'dat') ('dat', 'ik') ('ik', 'een') ('een', 'bijdrag') ('bijdrag', 'kan') ('kan', 'leveren') ('leveren', 'aan') ('aan', 'de') ('de', 'samenlev') ('samenlev', '.') ('.', 'Daar') ('Daar', 'ontleen') ('ontleen', 'ik') ('ik', 'namelijk') ('namelijk', 'een') ('een', 'gevoel') ('gevoel', 'van') ('van', 'waarder') ('waarder', 'aan') ('aan', '.') ('.', 'Dat') ('Dat', 'is') ('is', 'de') ('de', 'voornaamst') ('voornaamst', 'reden') ('reden', 'dat') ('dat', 'ik') ('ik', 'sind') ('sind', 'septemb') ('septemb', '2009') ('2009', 'huiswerkbegeleid') ('huiswerkbegeleid', 'geef') ('geef', 'aan') ('aan', 'basisschoolleerlingen') ('basisschoolleerlingen', 'in') ('in', 'de') ('de', 'Utrechts') ('Utrechts', 'wijk') ('wijk', 'Hoograven') ('Hoograven', '.')