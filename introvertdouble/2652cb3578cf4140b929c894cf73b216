') ('de', 'ruimtelijk') ('ruimtelijk', 'orden') ('orden', 'en') ('en', 'mobiliteit') ('mobiliteit', 'begonnen') ('begonnen', '.') ('.', 'Sind') ('Sind', 'het') ('het', 'najaar') ('najaar', 'van') ('van', '2008') ('2008', 'ben') ('ben', 'ik') ('ik', 'in') ('in', 'het') ('het', 'landelijk') ('landelijk', 'bestuur') ('bestuur', 'actief') ('actief', '.') ('.', 'Onderwerpen') ('Onderwerpen', 'waar') ('waar', 'ik') ('ik', 'me') ('me', 'nu') ('nu', 'primair') ('primair', 'mee') ('mee', 'bezig') ('bezig', 'houd') ('houd', 'zijn') ('zijn', 'Europa') ('Europa', ',') (',', 'Buitenlands') ('Buitenlands', 'Zaken') ('Zaken', 'en') ('en', 'ontwikkelingssamenwerk') ('ontwikkelingssamenwerk', '.')