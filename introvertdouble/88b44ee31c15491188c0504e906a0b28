raine') ('traine', 'ontmoet') ('ontmoet', 'en') ('en', 'ben') ('ben', 'door') ('door', 'wat') ('wat', 'zij') ('zij', 'verteld') ('verteld', 'enthousiast') ('enthousiast', 'geworden') ('geworden', 'over') ('over', 'het') ('het', 'Rijkstraineeship') ('Rijkstraineeship', '.') ('.', 'Het') ('Het', 'lijkt') ('lijkt', 'mij') ('mij', 'interess') ('interess', 'om') ('om', 'zelf') ('zelf', ',') (',', 'net') ('net', 'al') ('al', 'zij') ('zij', ',') (',', 'ook') ('ook', 'te') ('te', 'verdiepen') ('verdiepen', 'in') ('in', 'een') ('een', 'onderwerp') ('onderwerp', 'en') ('en', 'daar') ('daar', 'proberen') ('proberen', 'iet') ('iet', 'voor') ('voor', 'te') ('te', 'betekenen') ('betekenen', '.') ('.', 'Tijden') ('Tijden', 'mijn') ('mijn', 'studi') ('studi', 'is') ('is', 'mijn') ('mijn', 'interess') ('interess', 'voor') ('voor', 'de') ('de', 'politiek') ('politiek', 'en') ('en', 'publiek') ('publiek', 'opini') ('opini', 'groter') ('groter', 'geworden') ('geworden', '.') ('.', 'Ik') ('Ik', 'ben') ('ben', 'vooral') ('vooral', 'geinteresseerd') ('geinteresseerd', 'in') ('in', 'hoe') ('hoe', 'de') ('de', 'politiek') ('politiek', 'communiceert') ('communiceert', 'met') ('met', 'en') ('en', 'naar') ('naar', 'burger') ('burger', ',') (',', 'organisati') ('organisati', 'en') ('en', 'stakehold') ('stakehold', '.') ('.', 'Juist') ('Juist', 'communicati') ('communicati', 'kan') ('kan', 'zorgen') ('zorgen', 'dat') ('dat', 'de') ('de', 'afstand') ('afstand', 'tussen') ('tussen', 'het') ('het', 'Rijk') ('Rijk', 'en') ('en', 'burger') ('burger', 'kleiner') ('kleiner', 'wordt') ('wordt', ',') (',', 'en') ('en', 'dat') ('dat', 'maatschappelijk') ('maatschappelijk', 'betrokken') ('betrokken', 'gevoel') ('gevoel', 'bij') ('bij', 'burger') ('burger', '.') ('.', 'Mijn') ('Mijn', 'stageonderzoek') ('stageonderzoek', 'ging') ('ging', 'over') ('over', 'het') ('het', 'gebruik') ('gebruik', 'van') ('van', 'het') ('het', 'landelijk') ('landelijk', 'alarmnumm') ('alarmnumm', '.') ('.', 'Daaruit') ('Daaruit',