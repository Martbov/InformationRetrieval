') ('om', 'me') ('me', 'bezig') ('bezig', 'te') ('te', 'houden') ('houden', 'met') ('met', 'onderwerpen') ('onderwerpen', 'die') ('die', 'ook') ('ook', 'in') ('in', 'de') ('de', 'politiek') ('politiek', 'en') ('en', 'in') ('in', 'de') ('de', 'media') ('media', 'erg') ('erg', 'leven') ('leven', ':') (':', 'integrati') ('integrati', 'en') ('en', 'de') ('de', 'positi') ('positi', 'van') ('van', 'de') ('de', 'Islam') ('Islam', 'in') ('in', 'Europa') ('Europa', '.') ('.', 'Na') ('Na', 'het') ('het', 'afronden') ('afronden', 'van') ('van', 'mijn') ('mijn', 'studi') ('studi', 'heb') ('heb', 'ik') ('ik', 'al') ('al', 'vrijwillig') ('vrijwillig', 'geholpen') ('geholpen', 'bij') ('bij', 'de') ('de', 'inburgeringscursussen') ('inburgeringscursussen', 'van') ('van', 'het') ('het', 'NCB') ('NCB', '(') ('(', 'Nederland') ('Nederland', 'Centrum') ('Centrum', 'Buitenland') ('Buitenland', ')') (')', ',') (',', 'tot') ('tot', 'ik') ('ik', 'hier') ('hier', 'een') ('een', 'betaald') ('betaald', 'baan') ('baan', 'aangeboden') ('aangeboden', 'kreeg') ('kreeg', '.') ('.', 'Mijn') ('Mijn', 'interess') ('interess', 'in') ('in', 'de') ('de', 'maatschappij') ('maatschappij', 'is') ('is', 'echter') ('echter', 'veel') ('veel', 'breder') ('breder', 'dan') ('dan', 'integrati') ('integrati', ',') (',', 'inburg') ('inburg', 'en') ('en', 'de') ('de', 'onderwerpen') ('onderwerpen', 'die') ('die', 'tijden') ('tijden', 'mijn') ('mijn', 'studi') ('studi', 'behandeld') ('behandeld', 'zijn') ('zijn', '.') ('.', 'Tijden') ('Tijden', 'het') ('het', 'lezen') ('lezen', 'van') ('van', 'de') ('de', 'kranten') ('kranten', 'kom') ('kom', 'ik') ('ik', 'elk') ('elk', 'dag') ('dag', 'nieuw') ('nieuw', 'onderwerpen') ('onderwerpen', 'en') ('en', 'problemen') ('problemen', 'tegen') ('tegen', 'waar') ('waar', 'ik') ('ik', 'me') ('me', 'graag') ('graag', 'mee') ('mee', 'bezig') ('bezig', 'zou') ('zou', 'willen') ('willen', 'houden') ('houden', '.') ('.', 'Dit') ('Dit', 'zou') ('zou', 'zowel') ('zowel', 'in') ('in', 'een') ('een', 'uitvoerend') ('uitvoerend', 'functi') ('functi', 'al') ('al', 'in') ('in', 'een') ('een', 'management-') ('management-', 'of') ('of', 'bestuursfuncti') ('bestuursfuncti', 'kunnen') ('kunnen', 'zijn') ('zijn', '.')