rs') ('divers', 'culturen') ('culturen', 'tot') ('tot', 'het') ('het', 'organiseren') ('organiseren', 'van') ('van', 'informatiedagen') ('informatiedagen', 'over') ('over', 'het') ('het', 'familierecht') ('familierecht', '.') ('.', 'Teven') ('Teven', 'ben') ('ben', 'ik') ('ik', 'vrijwilligst') ('vrijwilligst', 'bij') ('bij', 'het') ('het', 'Marokko') ('Marokko', 'Fond') ('Fond', ',') (',', 'een') ('een', 'fond') ('fond', 'dat') ('dat', 'projecten') ('projecten', 'gericht') ('gericht', 'op') ('op', 'duurzam') ('duurzam', 'ontwikkel') ('ontwikkel', 'in') ('in', 'Marokko') ('Marokko', 'steunt') ('steunt', '.') ('.', 'Ook') ('Ook', 'ben') ('ben', 'ik') ('ik', 'bestuurslid') ('bestuurslid', 'bij') ('bij', 'de') ('de', 'interulturel') ('interulturel', 'studentenverenig') ('studentenverenig', 'Insan') ('Insan', ',') (',', 'na') ('na', 'enkel') ('enkel', 'jaren') ('jaren', 'in') ('in', 'de') ('de', 'activiteitencommissi') ('activiteitencommissi', 'en') ('en', 'de') ('de', 'lezingencommisi') ('lezingencommisi', 'gezeten') ('gezeten', 'te') ('te', 'hebben') ('hebben', '.') ('.', 'We') ('We', 'organiseren') ('organiseren', 'bijvoorbeeld') ('bijvoorbeeld', 'debatten') ('debatten', 'met') ('met', 'christelijk') ('christelijk', 'studentenverenigingen') ('studentenverenigingen', 'maar') ('maar', 'ook') ('ook', 'oudervoorlichtingen') ('oudervoorlichtingen', 'voor') ('voor', 'Turks') ('Turks', 'en') ('en', 'Marokkaans') ('Marokkaans', 'ouder') ('ouder', ',') (',', 'in') ('in', 'samenwerk') ('samenwerk', 'met') ('met', 'de') ('de', 'Universiteit') ('Universiteit', 'van') ('van', 'Utrecht') ('Utrecht', 'en') ('en', 'de') ('de', 'Hogeschool') ('Hogeschool', 'van') ('van', 'Utrecht') ('Utrecht', '.') ('.', 'Daarbij') ('Daarbij', 'zijn') ('zijn', 'we') ('we', 'momenteel') ('momenteel', 'betrokken') ('betrokken', 'bij') ('bij', 'het') ('het', 'project') ('project', 'Participati') ('Participati', 'van') ('van', 'het') ('het', 'VROM') ('VROM', 'in') ('in', 'samenwerk') ('samenwerk', 'met') 