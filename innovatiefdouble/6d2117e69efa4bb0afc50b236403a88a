mij') ('mij', 'een') ('een', 'scala') ('scala', 'aan') ('aan', 'mogelijkheden') ('mogelijkheden', 'en') ('en', 'deskundigheid') ('deskundigheid', ',') (',', 'waar') ('waar', 'ik') ('ik', 'me') ('me', 'niet') ('niet', 'alleen') ('alleen', 'al') ('al', 'werknem') ('werknem', 'maar') ('maar', 'ook') ('ook', 'al') ('al', 'men') ('men', 'kan') ('kan', 'floreren') ('floreren', '.') ('.', 'Mijn') ('Mijn', 'interess') ('interess', 'voor') ('voor', 'de') ('de', 'politiek') ('politiek', 'en') ('en', 'het') ('het', 'leveren') ('leveren', 'van') ('van', 'een') ('een', 'bijdrag') ('bijdrag', 'aan') ('aan', 'mijn') ('mijn', 'omgev') ('omgev', ',') (',', 'heb') ('heb', 'ik') ('ik', 'promin') ('promin', 'in') ('in', 'mijn') ('mijn', 'priveleven') ('priveleven', 'gekend') ('gekend', '.') ('.', 'Naast') ('Naast', 'de') ('de', 'politiek') ('politiek', 'studentenbeweg') ('studentenbeweg', 'en') ('en', 'deelnam') ('deelnam', 'aan') ('aan', 'het') ('het', 'bestuur') ('bestuur', 'van') ('van', 'een') ('een', 'studieverenig') ('studieverenig', ',') (',', 'heb') ('heb', 'ik') ('ik', 'een') ('een', 'voorliefd') ('voorliefd', 'voor') ('voor', 'de') ('de', 'politiek') ('politiek', 'en') ('en', 'de') ('de', 'wereldgeschiedeni') ('wereldgeschiedeni', '.') ('.', 'Debatteren') ('Debatteren', 'en') ('en', 'altijd') ('altijd', 'opzoek') ('opzoek', 'zijn') ('zijn', 'naar') ('naar', 'synergi') ('synergi', ',') (',', 'is') ('is', 'voor') ('voor', 'mij') ('mij', 'een') ('een', 'dagelijks') ('dagelijks', 'bezigheid') ('bezigheid', '.') ('.', 'Deze') ('Deze', 'liefd') ('liefd', 'wil') ('wil', 'ik') ('ik', 'graag') ('graag', 'op') ('op', 'een') ('een', 'professioneel') ('professioneel', 'werkveld') ('werkveld', 'verder') ('verder', 'ontwikkelen') ('ontwikkelen', '.')