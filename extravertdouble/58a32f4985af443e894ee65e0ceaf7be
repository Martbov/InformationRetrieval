iteit') ('kwaliteit', 'van') ('van', 'de') ('de', 'samenlev') ('samenlev', 'gaat') ('gaat', 'mij') ('mij', 'aan') ('aan', 'het') ('het', 'hart') ('hart', '.') ('.', 'Vanuit') ('Vanuit', 'deze') ('deze', 'beziel') ('beziel', 'wil') ('wil', 'ik') ('ik', 'ook') ('ook', 'graag') ('graag', 'meedoen') ('meedoen', 'met') ('met', 'het') ('het', 'rijkstraine') ('rijkstraine', ',') (',', 'in') ('in', 'de') ('de', 'hoop') ('hoop', 'via') ('via', 'de') ('de', 'overheid') ('overheid', 'verand') ('verand', 'te') ('te', 'brengen') ('brengen', 'in') ('in', 'het') ('het', 'beleid') ('beleid', '.') ('.', 'Met') ('Met', 'name') ('name', 'jeugdzorg') ('jeugdzorg', 'mag') ('mag', 'verbeterd') ('verbeterd', 'worden') ('worden', '.') ('.', 'De') ('De', 'wachtrijen') ('wachtrijen', 'en') ('en', 'de') ('de', 'vele') ('vele', 'fouten') ('fouten', 'zijn') ('zijn', 'niet') ('niet', 'acceptabel') ('acceptabel', ',') (',', 'het') ('het', 'kind') ('kind', 'is') ('is', 'daar') ('daar', 'de') ('de', 'dupe') ('dupe', 'van') ('van', '.')