') ('vwo', 'leerlingen') ('leerlingen', 'uit') ('uit', 'zwart') ('zwart', 'scholen') ('scholen', 'in') ('in', 'Rotterdam') ('Rotterdam', 'begeleidt') ('begeleidt', 'bij') ('bij', 'hun') ('hun', 'studiekeuz') ('studiekeuz', ',') (',', 'aangezien') ('aangezien', 'de') ('de', 'ouder') ('ouder', 'door') ('door', 'taalbarrièr') ('taalbarrièr', 'en') ('en', 'onvoldoend') ('onvoldoend', 'maatschappelijk') ('maatschappelijk', 'betrokkenheid') ('betrokkenheid', 'niet') ('niet', 'in') ('in', 'staat') ('staat', 'waren') ('waren', 'hun') ('hun', 'kinderen') ('kinderen', 'deze') ('deze', 'rol') ('rol', 'op') ('op', 'zich') ('zich', 'te') ('te', 'nemen') ('nemen', '.') ('.', 'Hierna') ('Hierna', 'ben') ('ben', 'ik') ('ik', 'een') ('een', 'van') ('van', 'de') ('de', 'medeopricht') ('medeopricht', 'geweest') ('geweest', 'voor') ('voor', 'het') ('het', 'vmbo-project') ('vmbo-project', 'aan') ('aan', 'de') ('de', 'EUR') ('EUR', ',') (',', 'gericht') ('gericht', 'op') ('op', 'vmbo') ('vmbo', 'drop') ('drop', 'out') ('out', '.') ('.', 'Het') ('Het', 'doel') ('doel', 'van') ('van', 'het') ('het', 'project') ('project', 'is') ('is', 'bewustmak') ('bewustmak', 'van') ('van', 'de') ('de', 'VMBOer') ('VMBOer', 'van') ('van', 'de') ('de', 'mogelijkheden') ('mogelijkheden', 'en') ('en', 'kansen') ('kansen', '.') ('.', 'Na') ('Na', 'mijn') ('mijn', 'studi') ('studi', 'heb') ('heb', 'ik') ('ik', 'een') ('een', 'tijdelijk') ('tijdelijk', 'baan') ('baan', 'gekregen') ('gekregen', 'aan') ('aan', 'de') ('de', 'EUR') ('EUR', 'al') ('al', 'projectleid') ('projectleid', 'bijzonder') ('bijzonder', 'taken') ('taken', 'en') ('en', 'voorzitt') ('voorzitt', 'van') ('van', 'het') ('het', 'samenwerkingsverband') ('samenwerkingsverband', 'van') ('van', 'de') ('de', '11') ('11', 'multiculturel') ('multiculturel', 'studentenverenigingen') ('studentenverenigingen', 'aan') ('aan', 'de') ('de', 'EUR') ('EUR', '.') ('.', 'Ik') ('Ik', 'ben') ('ben', 'verantwoordelijk') ('verantwoordelijk', 'voor') ('voor', 'all') ('