eerder') ('meerder', 'beleidsterreinen') ('beleidsterreinen', ',') (',', 'vanuit') ('vanuit', 'de') ('de', 'visi') ('visi', 'van') ('van', 'een') ('een', 'ministeri') ('ministeri', ',') (',', 'inhoudelijk') ('inhoudelijk', 'werkzaam') ('werkzaam', '.') ('.', 'Geleerd') ('Geleerd', 'vaardigheden') ('vaardigheden', 'worden') ('worden', 'toegepast') ('toegepast', 'en') ('en', 'leveren') ('leveren', 'voor') ('voor', 'de') ('de', 'toekomst') ('toekomst', 'een') ('een', 'professionel') ('professionel', 'meerwaard') ('meerwaard', 'op') ('op', '.') ('.', 'Om') ('Om', 'door') ('door', 'middel') ('middel', 'van') ('van', 'de') ('de', 'dynamiek') ('dynamiek', 'van') ('van', 'werken') ('werken', 'en') ('en', 'leren') ('leren', 'betrokken') ('betrokken', 'te') ('te', 'zijn') ('zijn', 'bij') ('bij', 'de') ('de', 'beleidsvorm') ('beleidsvorm', 'voor') ('voor', 'de') ('de', 'maatschappij') ('maatschappij', ',') (',', 'is') ('is', 'een') ('een', 'uitdag') ('uitdag', 'waar') ('waar', 'ik') ('ik', 'voor') ('voor', 'open') ('open', 'sta') ('sta', '.') ('.', 'Al') ('Al', 'burger') ('burger', 'die') ('die', 'een') ('een', 'toekomst') ('toekomst', 'wil') ('wil', 'opbouwen') ('opbouwen', 'is') ('is', 'het') ('het', 'van') ('van', 'belang') ('belang', 'de') ('de', 'veranderingen') ('veranderingen', 'in') ('in', 'de') ('de', 'samenlev') ('samenlev', 'scherp') ('scherp', 'in') ('in', 'de') ('de', 'gaten') ('gaten', 'te') ('te', 'houden') ('houden', '.') ('.', 'De') ('De', 'krant') ('krant', ',') (',', 'de') ('de', 'radio') ('radio', ',') (',', 'de') ('de', 'televisi') ('televisi', 'en') ('en', 'het') ('het', 'internet') ('internet', 'zijn') ('zijn', 'bronnen') ('bronnen', 'die') ('die', 'ik') ('ik', 'gebruik') ('gebruik', 'om') ('om', 'de') ('de', 'inspanningen') ('inspanningen', 'van') ('van', 'de') ('de', 'overheid') ('overheid', 'te') ('te', 'volgen') ('volgen', 'op') ('op', 'het') ('het', 'gebi') ('gebi', 'van') ('van', 'bijvoorbeeld') ('bijvoorbeeld', ',') (',', 'de') ('de', 'vergrijz') 