en') ('vakken', 'waren') ('waren', 'gericht') ('gericht', 'op') ('op', 'het') ('het', 'creëren') ('creëren', 'en') ('en', 'het') ('het', 'evalueren') ('evalueren', 'van') ('van', 'beleid') ('beleid', '(') ('(', 'smaatregelen') ('smaatregelen', ')') (')', '.') ('.', 'Het') ('Het', 'maatschappelijk') ('maatschappelijk', 'aspect') ('aspect', ',') (',', 'de') ('de', 'betrokkenheid') ('betrokkenheid', 'van') ('van', 'divers') ('divers', 'vakgebieden/sectoren') ('vakgebieden/sectoren', ',') (',', 'de') ('de', '¿brede') ('¿brede', 'invloed¿') ('invloed¿', '(') ('(', 'op') ('op', 'allerlei') ('allerlei', 'actoren') ('actoren', ')') (')', 'van') ('van', 'soortgelijk') ('soortgelijk', 'beleid') ('beleid', '(') ('(', 'smaatregelen') ('smaatregelen', ')') (')', 'is') ('is', 'wat') ('wat', 'mij') ('mij', 'intrigeert') ('intrigeert', 'aan') ('aan', 'de') ('de', 'functi') ('functi', 'van') ('van', 'rijkstraine') ('rijkstraine', '.') ('.', 'Bij') ('Bij', 'het') ('het', '(') ('(', 'vrijwilligers-') ('vrijwilligers-', ')') (')', 'werk') ('werk', 'dat') ('dat', 'ik') ('ik', 'de') ('de', 'afgelopen') ('afgelopen', 'jaren') ('jaren', 'heb') ('heb', 'gedaan') ('gedaan', ',') (',', 'voel') ('voel', 'ik') ('ik', 'mij') ('mij', 'dusdanig') ('dusdanig', 'betrokken') ('betrokken', ',') (',', 'dat') ('dat', 'het') ('het', 'mij') ('mij', 'voldoen') ('voldoen', 'en') ('en', 'motivati') ('motivati', 'heeft') ('heeft', 'gegeven') ('gegeven', 'me') ('me', 'hiervoor') ('hiervoor', 'te') ('te', 'blijven') ('blijven', 'inzetten') ('inzetten', '.') ('.', 'Het') ('Het', 'vrijwilligerswerk') ('vrijwilligerswerk', 'heeft') ('heeft', 'veelal') ('veelal', 'plaatsgevonden') ('plaatsgevonden', 'in') ('in', 'social') ('social', 'instellingen') ('instellingen', ',') (',', 'zoal') ('zoal', 'de') ('de', 'reddingsbrigad') ('reddingsbrigad', 'al') ('al', 'hulpverlenend') ('hulpverlenend', 'instanti') ('instanti', '(') ('(', 'divers') ('divers', 'commissi') ('commissi', 'en') ('en', 'momenteel') ('momenteel', 'ook')