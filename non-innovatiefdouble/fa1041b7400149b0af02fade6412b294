in') ('in', 'het') ('het', 'bestuur') ('bestuur', 'heb') ('heb', 'gezeten') ('gezeten', 'van') ('van', 'mijn') ('mijn', 'basketbal') ('basketbal', 'verenig') ('verenig', 'Rotterdam-Zuid') ('Rotterdam-Zuid', '.') ('.', 'Hier') ('Hier', 'heb') ('heb', 'ik') ('ik', 'geleerd') ('geleerd', 'met') ('met', 'allerlei') ('allerlei', 'mensen') ('mensen', '(') ('(', 'geloof') ('geloof', ',') (',', 'etniciteit') ('etniciteit', ',') (',', 'social') ('social', 'klass') ('klass', ')') (')', 'samen') ('samen', 'te') ('te', 'werken') ('werken', '.') ('.', 'Dit') ('Dit', 'heeft') ('heeft', 'me') ('me', 'meer') ('meer', 'inzicht') ('inzicht', 'gegeven') ('gegeven', 'in') ('in', 'de') ('de', 'maatschappij') ('maatschappij', '.') ('.', 'Daarnaast') ('Daarnaast', 'heb') ('heb', 'ik') ('ik', 'ook') ('ook', 'trainingen') ('trainingen', 'gegeven') ('gegeven', 'en') ('en', 'wedstrijden') ('wedstrijden', 'gecoacht') ('gecoacht', 'voor') ('voor', 'diezelfd') ('diezelfd', 'basketbal') ('basketbal', 'club') ('club', '.') ('.', 'Ook') ('Ook', 'komt') ('komt', 'mijn') ('mijn', 'maatschappelijk') ('maatschappelijk', 'betrokkenheid') ('betrokkenheid', 'naar') ('naar', 'voren') ('voren', 'in') ('in', 'de') ('de', 'studi') ('studi', 'psychologi') ('psychologi', 'en') ('en', 'mijn') ('mijn', 'Master') ('Master', 'Global') ('Global', 'Busi') ('Busi', 'and') ('and', 'Stakehold') ('Stakehold', 'Manag') ('Manag', ',') (',', 'waar') ('waar', 'het') ('het', 'veelvuldig') ('veelvuldig', 'gaat') ('gaat', 'om') ('om', 'verantwoord') ('verantwoord', 'ondernemen') ('ondernemen', 'en') ('en', 'sustain') ('sustain', '.') ('.', 'Tot') ('Tot', 'slot') ('slot', 'ben') ('ben', 'ik') ('ik', 'geboeid') ('geboeid', 'door') ('door', 'wat') ('wat', 'mensen') ('mensen', 'drijft') ('drijft', 'en') ('en', 'hoe') ('hoe', 'mensen') ('mensen', 'optima') ('optima', 'kunnen') ('kunnen', 'functioneren') ('functioneren', '.') ('.', 'In') ('In', 'breder') ('breder', 'zin') ('zin', 'kun') ('kun', 'je') ('je', 'dit') ('dit', 'ook') ('oo