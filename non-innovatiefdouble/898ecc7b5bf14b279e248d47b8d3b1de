ig') ('zelfstandig', 'schilderijenrestaur') ('schilderijenrestaur', ',') (',', 'ik') ('ik', 'zet') ('zet', 'mij') ('mij', 'du') ('du', 'actief') ('actief', 'in') ('in', 'voor') ('voor', 'het') ('het', 'behoud') ('behoud', 'van') ('van', 'cultureel') ('cultureel', 'erfgo') ('erfgo', '.') ('.', 'Naast') ('Naast', 'dit') ('dit', 'betaald') ('betaald', 'werk') ('werk', ',') (',', 'vervul') ('vervul', 'ik') ('ik', 'een') ('een', 'adviserend') ('adviserend', 'functi') ('functi', 'bij') ('bij', 'Museum') ('Museum', 'Hilversum') ('Hilversum', 'op') ('op', 'vrijwillig') ('vrijwillig', 'basi') ('basi', '.') ('.', 'Hierme') ('Hierme', 'probeer') ('probeer', 'ik') ('ik', 'inzicht') ('inzicht', 'te') ('te', 'geven') ('geven', 'in') ('in', 'het') ('het', 'belang') ('belang', 'van') ('van', 'go') ('go', 'collectiebeh') ('collectiebeh', '.') ('.', 'Bij') ('Bij', 'het') ('het', 'Rijk') ('Rijk', 'kan') ('kan', 'ik') ('ik', 'vanuit') ('vanuit', 'de') ('de', 'bron') ('bron', 'opereren') ('opereren', 'en') ('en', 'met') ('met', 'dergelijk') ('dergelijk', 'vraagstukken') ('vraagstukken', 'aan') ('aan', 'de') ('de', 'slag') ('slag', '.')