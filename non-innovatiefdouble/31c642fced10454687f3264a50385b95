') ('.', 'In') ('In', 'mijn') ('mijn', 'werkzaamheden') ('werkzaamheden', 'in') ('in', 'bersturen') ('bersturen', 'heb') ('heb', 'ik') ('ik', 'geleerd') ('geleerd', 'onder') ('onder', 'een') ('een', 'tijdsdruk') ('tijdsdruk', 'te') ('te', 'werken') ('werken', 'onder') ('onder', 'het') ('het', 'toeziend') ('toeziend', 'oog') ('oog', 'van') ('van', 'een') ('een', 'grote') ('grote', 'groep') ('groep', 'leden') ('leden', 'van') ('van', 'de') ('de', 'verenig') ('verenig', '.') ('.', 'Deze') ('Deze', 'opgedan') ('opgedan', 'ervaringen') ('ervaringen', 'kan') ('kan', 'ik') ('ik', 'naar') ('naar', 'mijn') ('mijn', 'mene') ('mene', 'go') ('go', 'gebruiken') ('gebruiken', 'om') ('om', 'in') ('in', 'te') ('te', 'toekomst') ('toekomst', 'een') ('een', 'sleutelrol') ('sleutelrol', 'te') ('te', 'vervullen') ('vervullen', 'binnen') ('binnen', 'het') ('het', 'Rijk') ('Rijk', 'In') ('In', 'elk') ('elk', 'verband') ('verband', 'waarin') ('waarin', 'ik') ('ik', 'deelneem') ('deelneem', ',') (',', 'wil') ('wil', 'ik') ('ik', 'bijdragen') ('bijdragen', '.') ('.', 'Van') ('Van', 'jong') ('jong', 'af') ('af', 'aan') ('aan', 'ben') ('ben', 'ik') ('ik', 'actief') ('actief', 'in') ('in', 'allerlei') ('allerlei', 'gremia') ('gremia', '.') ('.', 'Zo') ('Zo', 'wa') ('wa', 'ik') ('ik', 'in') ('in', 'mijn') ('mijn', 'hockeyverenig') ('hockeyverenig', 'actief') ('actief', 'al') ('al', 'keeper') ('keeper', 'in') ('in', 'de') ('de', 'eerst') ('eerst', 'klass') ('klass', ',') (',', 'heb') ('heb', 'ik') ('ik', 'een') ('een', 'jeugdelft') ('jeugdelft', 'gecoacht') ('gecoacht', 'en') ('en', 'momenteel') ('momenteel', 'ben') ('ben', 'ik') ('ik', 'aanvoerd') ('aanvoerd', 'van') ('van', 'een') ('een', 'elftal') ('elftal', 'wat') ('wat', 'ik') ('ik', 'samen') ('samen', 'met') ('met', 'twee') ('twee', 'anderen') ('anderen', 'heb') ('heb', 'opgezet') ('opgezet', '.') ('.', 'Op') ('Op', 'mijn') ('mijn', 'studentenverenig') ('studentenverenig', 'ben') ('ben', 'ik') ('ik', 'lid') ('lid', 'geworden') ('geworden',