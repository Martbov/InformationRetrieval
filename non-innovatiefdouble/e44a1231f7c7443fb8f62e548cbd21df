', 'vermelden') ('vermelden', 'dat') ('dat', 'ik') ('ik', 'al') ('al', 'net') ('net', 'afgestudeerd') ('afgestudeerd', ',') (',', 'met') ('met', 'mijn') ('mijn', 'veel') ('veel', 'actuel') ('actuel', 'kenni') ('kenni', ',') (',', 'iet') ('iet', 'voor') ('voor', 'u') ('u', 'wil') ('wil', 'betekenen') ('betekenen', '.') ('.', 'Ik') ('Ik', 'hou') ('hou', 'me') ('me', 'bezig') ('bezig', 'met') ('met', 'maatschappelijk') ('maatschappelijk', 'onderwerpen') ('onderwerpen', '.') ('.', 'Dat') ('Dat', 'doe') ('doe', 'ik') ('ik', 'door') ('door', 'in') ('in', 'de') ('de', 'media') ('media', 'berichten') ('berichten', 'over') ('over', 'politiek') ('politiek', 'en') ('en', 'bestuur') ('bestuur', 'te') ('te', 'volgen') ('volgen', '.') ('.', 'Maatschappelijk') ('Maatschappelijk', 'onderwerpen') ('onderwerpen', 'trekken') ('trekken', 'mijn') ('mijn', 'aandacht') ('aandacht', 'en') ('en', 'interess') ('interess', 'onder') ('onder', 'meer') ('meer', 'omdat') ('omdat', 'ik') ('ik', 'me') ('me', 'daar') ('daar', 'go') ('go', 'in') ('in', 'kan') ('kan', 'leven') ('leven', '.') ('.', 'En') ('En', 'nu') ('nu', 'wil') ('wil', 'ik') ('ik', 'er') ('er', 'graag') ('graag', 'professioneel') ('professioneel', 'mee') ('mee', 'aan') ('aan', 'de') ('de', 'slag') ('slag', '.')