.') ('.', 'Het') ('Het', 'doel') ('doel', 'van') ('van', 'dit') ('dit', '2-jarig') ('2-jarig', 'project') ('project', 'is') ('is', 'om') ('om', 'studenten') ('studenten', 'te') ('te', 'ondersteunen') ('ondersteunen', 'in') ('in', 'het') ('het', 'versterken') ('versterken', 'van') ('van', 'studentenbewegingen') ('studentenbewegingen', 'en') ('en', 'het') ('het', 'bijdragen') ('bijdragen', 'aan') ('aan', 'een') ('een', 'democratisch') ('democratisch', '(') ('(', 'er') ('er', ')') (')', 'onderwijssysteem') ('onderwijssysteem', '.') ('.', 'Uiteindelijk') ('Uiteindelijk', 'hoop') ('hoop', 'ik') ('ik', 'dat') ('dat', 'ik') ('ik', 'deze') ('deze', 'werkervaringen') ('werkervaringen', 'en') ('en', 'mijn') ('mijn', 'capaciteiten') ('capaciteiten', 'kan') ('kan', 'inzetten') ('inzetten', 'in') ('in', 'een') ('een', 'functi') ('functi', 'bij') ('bij', 'het') ('het', 'Rijk') ('Rijk', '.')