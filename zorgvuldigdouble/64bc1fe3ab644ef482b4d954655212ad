') ('Rijk', 'in') ('in', 'aanrak') ('aanrak', 'te') ('te', 'komen') ('komen', '.') ('.', 'Mijn') ('Mijn', 'flexibel') ('flexibel', 'en') ('en', 'open') ('open', 'instel') ('instel', 'komt') ('komt', 'daarbij') ('daarbij', 'go') ('go', 'van') ('van', 'pa') ('pa', '.') ('.', 'Graag') ('Graag', 'zou') ('zou', 'ik') ('ik', 'de') ('de', 'kan') ('kan', 'krijgen') ('krijgen', 'om') ('om', 'Rijkstraine') ('Rijkstraine', 'te') ('te', 'worden') ('worden', ',') (',', 'zodat') ('zodat', 'ik') ('ik', 'een') ('een', 'bijdrag') ('bijdrag', 'kan') ('kan', 'leveren') ('leveren', 'aan') ('aan', 'de') ('de', 'Nederlands') ('Nederlands', 'samenlev') ('samenlev', '.') ('.', 'De') ('De', 'keuz') ('keuz', 'voor') ('voor', 'het') ('het', 'volgen') ('volgen', 'van') ('van', 'de') ('de', 'studi') ('studi', 'Communicatiewetenschap') ('Communicatiewetenschap', 'is') ('is', 'tot') ('tot', 'stand') ('stand', 'gekomen') ('gekomen', 'omdat') ('omdat', 'ik') ('ik', 'graag') ('graag', 'kenni') ('kenni', 'wild') ('wild', 'op') ('op', 'doen') ('doen', 'waarme') ('waarme', 'ik') ('ik', 'in') ('in', 'de') ('de', 'praktijk') ('praktijk', 'iet') ('iet', 'kon') ('kon', 'betekenen') ('betekenen', 'voor') ('voor', 'de') ('de', 'maatschappij') ('maatschappij', '.') ('.', 'Maatschappelijk') ('Maatschappelijk', 'onderwerpen') ('onderwerpen', 'hebben') ('hebben', 'mij') ('mij', 'namelijk') ('namelijk', 'altijd') ('altijd', 'al') ('al', 'bezig') ('bezig', 'gehouden') ('gehouden', '.') ('.', 'Hoe') ('Hoe', 'werkt') ('werkt', 'de') ('de', 'politiek') ('politiek', 'en') ('en', 'het') ('het', 'bestuur') ('bestuur', ',') (',', 'waarom') ('waarom', 'worden') ('worden', 'welk') ('welk', 'beslissingen') ('beslissingen', 'genomen') ('genomen', ',') (',', 'hoe') ('hoe', 'komen') ('komen', 'bepaald') ('bepaald', 'oplossingen') ('oplossingen', 'tot') ('tot', 'stand') ('stand', '?') ('?', 'Dit') ('Dit', 'zijn') ('zijn', 'allerlei') ('allerlei', 'vragen') ('vragen', 'die') ('die', 'mij') ('mij', 'bezighouden') ('bezighouden', 