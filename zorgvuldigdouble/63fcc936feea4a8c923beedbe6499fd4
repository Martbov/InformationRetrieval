ach') ('detach', 'naar') ('naar', 'het') ('het', 'buitenland') ('buitenland', 'of') ('of', 'een') ('een', 'EU-instel') ('EU-instel', 'sluit') ('sluit', 'aan') ('aan', 'bij') ('bij', 'mijn') ('mijn', 'international') ('international', 'interess') ('interess', 'en') ('en', 'ambiti') ('ambiti', '.') ('.', 'Vanweg') ('Vanweg', 'mijn') ('mijn', 'brede') ('brede', 'interess') ('interess', ',') (',', 'kritisch') ('kritisch', 'blik') ('blik', 'en') ('en', 'flexibel') ('flexibel', 'opstel') ('opstel', 'zou') ('zou', 'het') ('het', 'RTP') ('RTP', 'voor') ('voor', 'mij') ('mij', 'een') ('een', 'logisch') ('logisch', 'volgend') ('volgend', 'stap') ('stap', 'zijn') ('zijn', '.') ('.', 'Mijn') ('Mijn', 'maatschappelijk') ('maatschappelijk', 'interess') ('interess', 'zijn') ('zijn', 'vooral') ('vooral', 'internationa') ('internationa', 'gericht') ('gericht', '.') ('.', 'Ik') ('Ik', 'wil') ('wil', 'mij') ('mij', 'focussen') ('focussen', 'op') ('op', 'politiek') ('politiek', 'en') ('en', 'beleid') ('beleid', 'dat') ('dat', 'niet') ('niet', 'alleen') ('alleen', 'national') ('national', ',') (',', 'maar') ('maar', 'Europes') ('Europes', 'en') ('en', 'ook') ('ook', 'wereldwijd') ('wereldwijd', 'gevolgen') ('gevolgen', 'heeft') ('heeft', '.') ('.', 'Bij') ('Bij', 'het') ('het', 'ministeri') ('ministeri', 'van') ('van', 'Buitenlands') ('Buitenlands', 'Zaken') ('Zaken', 'heb') ('heb', 'ik') ('ik', 'bijvoorbeeld') ('bijvoorbeeld', 'mee') ('mee', 'mogen') ('mogen', 'werken') ('werken', 'aan') ('aan', 'het') ('het', 'opstellen') ('opstellen', 'van') ('van', 'de') ('de', 'Europes') ('Europes', 'mensenrechtenrichtlijn') ('mensenrechtenrichtlijn', 'ten') ('ten', 'aanzien') ('aanzien', 'van') ('van', 'de') ('de', 'Centraal-Aziatisch') ('Centraal-Aziatisch', 'landen') ('landen', '.') ('.', 'Ook') ('Ook', 'heb') ('heb', 'ik') ('ik', 'projecten') ('projecten', 'van') ('van', 'NGO') ('NGO', '?') ('?', 's') ('s', 'mogen') ('mogen', 'beoordelen') ('beoordelen', ',') (',', 'waarme') ('waarme', 'de') ('