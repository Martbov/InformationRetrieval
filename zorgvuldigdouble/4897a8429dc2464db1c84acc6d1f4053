n') ('kan', 'om') ('om', 'te') ('te', 'leren') ('leren', 'van') ('van', 'ander') ('ander', 'traine') ('traine', 'sluiten') ('sluiten', 'hier') ('hier', 'perfect') ('perfect', 'bij') ('bij', 'aan') ('aan', '.') ('.', 'Omdat') ('Omdat', 'ieder') ('ieder', 'traine') ('traine', 'een') ('een', 'ander') ('ander', 'achtergrond') ('achtergrond', 'heeft') ('heeft', ',') (',', 'maar') ('maar', 'toch') ('toch', 'allema') ('allema', 'in') ('in', 'de') ('de', 'zelfd') ('zelfd', 'situati') ('situati', 'zitten') ('zitten', ',') (',', 'kunnen') ('kunnen', 'we') ('we', 'heel') ('heel', 'veel') ('veel', 'van') ('van', 'elkaar') ('elkaar', 'opsteken') ('opsteken', '.') ('.', 'Hopelijk') ('Hopelijk', 'resulteert') ('resulteert', 'dit') ('dit', 'in') ('in', 'een') ('een', 'actiev') ('actiev', 'bijdrag') ('bijdrag', 'aan') ('aan', 'oplossingen') ('oplossingen', 'voor') ('voor', 'beleidsvraagstukken') ('beleidsvraagstukken', '!') ('!', 'Ik') ('Ik', 'heb') ('heb', 'mij') ('mij', 'altijd') ('altijd', 'bezig') ('bezig', 'gehouden') ('gehouden', 'met') ('met', 'actuel') ('actuel', 'vraagstukken') ('vraagstukken', 'in') ('in', 'de') ('de', 'samenlev') ('samenlev', '.') ('.', 'Tijden') ('Tijden', 'mijn') ('mijn', 'studi') ('studi', 'komt') ('komt', 'dit') ('dit', 'terug') ('terug', 'in') ('in', 'mijn') ('mijn', 'scripti') ('scripti', 'en') ('en', 'verslagen') ('verslagen', 'waarin') ('waarin', 'ik') ('ik', 'altijd') ('altijd', 'actuel') ('actuel', 'vraagstukken') ('vraagstukken', 'probeer') ('probeer', 'te') ('te', 'beschrijven') ('beschrijven', '.') ('.', 'In') ('In', 'mijn') ('mijn', '?') ('?', 'master') ('master', 'thesi') ('thesi', '?') ('?', 'ben') ('ben', 'ik') ('ik', 'bijvoorbeeld') ('bijvoorbeeld', 'ingegaan') ('ingegaan', 'op') ('op', 'de') ('de', 'kredietcrisi') ('kredietcrisi', 'en') ('en', 'de') ('de', 'woningmarkt') ('woningmarkt', '.') ('.', 'Ik') ('Ik', 'onderzoek') ('onderzoek', 'mogelijkheden') ('mogelijkheden', 'om') ('om', 'de') ('de', 'producti') ('producti', 'van') ('van', 