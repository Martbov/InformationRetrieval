') ('gehoord', '.') ('.', 'Ze') ('Ze', 'werkt') ('werkt', 'nu') ('nu', 'voor') ('voor', 'Binnenlands') ('Binnenlands', 'Zaken') ('Zaken', 'en') ('en', 'raadd') ('raadd', 'me') ('me', 'me') ('me', 'deze') ('deze', 'week') ('week', 'nog') ('nog', 'aan') ('aan', 'om') ('om', 'te') ('te', 'solliciteren') ('solliciteren', ',') (',', 'waarbij') ('waarbij', 'ze') ('ze', 'toevoegd') ('toevoegd', 'dat') ('dat', 'ze') ('ze', 'me') ('me', "'een") ("'een", 'echt') ('echt', 'goed') ('goed', 'kandidaat') ('kandidaat', 'vindt') ('vindt', "'") ("'", '.') ('.', 'Een') ('Een', 'belangrijk') ('belangrijk', 'voordeel') ('voordeel', 'van') ('van', 'een') ('een', 'Rijkstraineeship') ('Rijkstraineeship', 'boven') ('boven', 'ander') ('ander', 'opti') ('opti', 'vind') ('vind', 'ik') ('ik', 'dat') ('dat', 'het') ('het', 'echt') ('echt', 'veel') ('veel', 'mogelijkheden') ('mogelijkheden', 'biedt') ('biedt', 'om') ('om', 'je') ('je', 'naast') ('naast', 'je') ('je', 'vast') ('vast', 'werkzaamheden') ('werkzaamheden', 'te') ('te', 'verdiepen') ('verdiepen', 'en') ('en', 'te') ('te', 'verbreden') ('verbreden', '.') ('.', 'Ben') ('Ben', 'zolang') ('zolang', 'ik') ('ik', 'me') ('me', 'kan') ('kan', 'herinneren') ('herinneren', 'actief') ('actief', 'in') ('in', 'verenigingen') ('verenigingen', '.') ('.', 'Tijden') ('Tijden', 'schooltijd') ('schooltijd', 'vooral') ('vooral', 'bij') ('bij', 'jeugdbond') ('jeugdbond', 'voor') ('voor', 'natuurstudi') ('natuurstudi', 'en') ('en', 'schoolkrant') ('schoolkrant', '.') ('.', 'Daarna') ('Daarna', 'vooral') ('vooral', 'bij') ('bij', 'studentenverenig') ('studentenverenig', 'vrijwel') ('vrijwel', 'all') ('all', 'gedaan') ('gedaan', '.') ('.', 'Ik') ('Ik', 'beleef') ('beleef', 'de') ('de', 'krant') ('krant', 'op') ('op', 'een') ('een', 'dagelijks') ('dagelijks', 'basi') ('basi', ',') (',', 'ook') ('ook', 'nu') ('nu', 'ik') ('ik', 'in') ('in', 'het') ('het', 'buitenland') ('buitenland', 'zit') ('zit', '.') ('.', 'Tijden') ('Tijden', 'mijn') ('mijn', 'jeugd') ('je