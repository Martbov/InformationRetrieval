.') ('.', 'Gedurend') ('Gedurend', 'deze') ('deze', 'stage') ('stage', 'heb') ('heb', 'ik') ('ik', 'een') ('een', 'bijdrag') ('bijdrag', 'kunnen') ('kunnen', 'leveren') ('leveren', 'aan') ('aan', 'de') ('de', 'maatschappelijk') ('maatschappelijk', 'integrati') ('integrati', 'van') ('van', 'minderheden') ('minderheden', 'en') ('en', 'een') ('een', 'breder') ('breder', 'en') ('en', 'concreter') ('concreter', 'visi') ('visi', 'op') ('op', 'het') ('het', 'integratievraagstuk') ('integratievraagstuk', 'kunnen') ('kunnen', 'ontwikkelen') ('ontwikkelen', '.') ('.', 'Afgelopen') ('Afgelopen', 'zomer') ('zomer', 'werkzaam') ('werkzaam', 'geweest') ('geweest', 'bij') ('bij', 'de') ('de', 'thuiszorg') ('thuiszorg', ',') (',', 'om') ('om', 'bij') ('bij', 'te') ('te', 'dragen') ('dragen', 'aan') ('aan', 'de') ('de', 'zelfstandigheid') ('zelfstandigheid', 'van') ('van', 'mensen') ('mensen', 'met') ('met', 'een') ('een', 'beperk') ('beperk', '.') ('.', 'Centraal') ('Centraal', 'staat') ('staat', 'voor') ('voor', 'mij') ('mij', 'de') ('de', 'betrokkenheid') ('betrokkenheid', 'van') ('van', 'mensen') ('mensen', 'bij') ('bij', 'de') ('de', 'samenlev') ('samenlev', ',') (',', 'waardoor') ('waardoor', 'saamhorigheid') ('saamhorigheid', 'kan') ('kan', 'ontstaan') ('ontstaan', 'en') ('en', 'mensen') ('mensen', 'zich') ('zich', 'thui') ('thui', 'voelen') ('voelen', 'in') ('in', 'Nederland') ('Nederland', '.')