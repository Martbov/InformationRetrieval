') ('ik', 'het') ('het', 'ook') ('ook', 'belangrijk') ('belangrijk', 'om') ('om', 'iet') ('iet', 'te') ('te', 'kunnen') ('kunnen', 'betekenen') ('betekenen', 'voor') ('voor', 'mensen') ('mensen', 'die') ('die', 'beperkingen') ('beperkingen', 'ondervinden') ('ondervinden', 'in') ('in', 'hun') ('hun', 'dagelijks') ('dagelijks', 'leven') ('leven', '.') ('.', 'Zo') ('Zo', 'heb') ('heb', 'ik') ('ik', '5') ('5', 'jaar') ('jaar', 'zweml') ('zweml', 'gegeven') ('gegeven', 'aan') ('aan', 'gehandicapt') ('gehandicapt', 'kinderen') ('kinderen', '.') ('.', 'Heden') ('Heden', 'help') ('help', 'ik') ('ik', 'bij') ('bij', 'al') ('al', 'vrijwillig') ('vrijwillig', 'bij') ('bij', 'de') ('de', 'plaatselijk') ('plaatselijk', 'bingoavond') ('bingoavond', 'met') ('met', 'al') ('al', 'doel') ('doel', 'dat') ('dat', 'ziek') ('ziek', 'mensen') ('mensen', 'naar') ('naar', 'Lourd') ('Lourd', 'kunnen') ('kunnen', 'gaan') ('gaan', ',') (',', 'en') ('en', 'ben') ('ben', 'ik') ('ik', 'zorgverlen') ('zorgverlen', 'van') ('van', 'een') ('een', 'zwakbegaafd') ('zwakbegaafd', 'jong') ('jong', 'vrouw') ('vrouw', '.')