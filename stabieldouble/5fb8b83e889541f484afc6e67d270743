mij') ('mij', 'overtuigd') ('overtuigd', 'van') ('van', 'de') ('de', 'juistheid') ('juistheid', 'van') ('van', 'deze') ('deze', 'keuz') ('keuz', '.') ('.', 'Het') ('Het', 'is') ('is', 'ten') ('ten', 'slott') ('slott', 'dan') ('dan', 'ook') ('ook', 'mijn') ('mijn', 'ambiti') ('ambiti', 'om') ('om', 'in') ('in', 'de') ('de', 'toekomst') ('toekomst', 'bij') ('bij', 'het') ('het', 'Ministeri') ('Ministeri', 'van') ('van', 'Buitenlands') ('Buitenlands', 'Zaken') ('Zaken', 'werkzaam') ('werkzaam', 'te') ('te', 'zullen') ('zullen', 'zijn') ('zijn', '.') ('.', 'Het') ('Het', 'opdoen') ('opdoen', 'van') ('van', 'waardevol') ('waardevol', 'werkervar') ('werkervar', 'al') ('al', 'rijkstraine') ('rijkstraine', 'lijkt') ('lijkt', 'mij') ('mij', 'een') ('een', 'gedegen') ('gedegen', 'en') ('en', 'boven') ('boven', 'interessant') ('interessant', 'voorbereid') ('voorbereid', 'hierop') ('hierop', '.') ('.', 'Maatschappelijk') ('Maatschappelijk', 'betrokken') ('betrokken', 'betek') ('betek', 'voor') ('voor', 'mij') ('mij', ':') (':', 'saamhorigheid') ('saamhorigheid', ',') (',', 'wederzijd') ('wederzijd', 'begrip') ('begrip', ',') (',', 'een') ('een', 'open') ('open', 'instel') ('instel', 'en') ('en', 'actiev') ('actiev', 'deelnam') ('deelnam', 'aan') ('aan', 'de') ('de', 'samenlev') ('samenlev', '.') ('.', 'Persoonlijk') ('Persoonlijk', 'beschouw') ('beschouw', 'ik') ('ik', 'mezelf') ('mezelf', 'al') ('al', 'zodanig') ('zodanig', ':') (':', 'door') ('door', 'het') ('het', 'lezen') ('lezen', 'van') ('van', 'de') ('de', 'krant') ('krant', 'neem') ('neem', 'ik') ('ik', 'dagelijk') ('dagelijk', 'het') ('het', 'nieuw') ('nieuw', 'tot') ('tot', 'me') ('me', ',') (',', 'ik') ('ik', 'ben') ('ben', 'lid') ('lid', 'van') ('van', 'een') ('een', 'politiek') ('politiek', 'partij') ('partij', ',') (',', 'in') ('in', 'mijn') ('mijn', 'tijd') ('tijd', 'in') ('in', 'Jemen') ('Jemen', 'heb') ('heb', 'ik') ('ik', 'me') ('me', 'hoofdzakelijk') ('hoofdzakelijk', 'ingezet') ('ingezet', 'in') ('in', 'het'