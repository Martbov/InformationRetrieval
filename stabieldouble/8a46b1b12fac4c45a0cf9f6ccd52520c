ist') ('juist', 'programma') ('programma', 'om') ('om', 'mijn') ('mijn', 'studi') ('studi', 'Bestuurkund') ('Bestuurkund', 'een') ('een', 'mooi') ('mooi', 'vervolg') ('vervolg', 'te') ('te', 'geven') ('geven', 'en') ('en', 'mijn') ('mijn', 'competenti') ('competenti', 'verder') ('verder', 'te') ('te', 'verijken') ('verijken', '.') ('.', 'Om') ('Om', 'voor') ('voor', 'de') ('de', 'Rijksoverheid') ('Rijksoverheid', 'te') ('te', 'werken') ('werken', 'is') ('is', 'het') ('het', 'naar') ('naar', 'mijn') ('mijn', 'mene') ('mene', 'erg') ('erg', 'belangrijk') ('belangrijk', 'dat') ('dat', 'je') ('je', 'betrokken') ('betrokken', 'bent') ('bent', 'bij') ('bij', 'de') ('de', 'maatschappij') ('maatschappij', '.') ('.', 'Voor') ('Voor', 'mij') ('mij', 'houdt') ('houdt', 'dit') ('dit', 'naast') ('naast', 'politiek') ('politiek', 'betrokkenheid') ('betrokkenheid', 'ook') ('ook', 'het') ('het', 'affiniteit') ('affiniteit', 'hebben') ('hebben', 'met') ('met', 'de') ('de', 'burger') ('burger', 'in') ('in', '.') ('.', 'De') ('De', 'burger') ('burger', 'is') ('is', 'immer') ('immer', 'de') ('de', 'belangrijkst') ('belangrijkst', 'stakehold') ('stakehold', 'van') ('van', 'de') ('de', 'Rijksoverheid') ('Rijksoverheid', 'en') ('en', 'hier') ('hier', 'wordt') ('wordt', 'het') ('het', 'beleid') ('beleid', 'voor') ('voor', 'gemaakt') ('gemaakt', '.') ('.', 'Ik') ('Ik', 'vind') ('vind', 'het') ('het', 'belangrijk') ('belangrijk', 'om') ('om', 'in') ('in', 'mijn') ('mijn', 'werkzaamheden') ('werkzaamheden', 'iet') ('iet', 'belangrijk') ('belangrijk', 'te') ('te', 'doen') ('doen', 'voor') ('voor', 'de') ('de', 'maatschappij') ('maatschappij', '.') ('.', 'Maatschappelijk') ('Maatschappelijk', 'nuttig') ('nuttig', 'werk') ('werk', 'verrichten') ('verrichten', 'geeft') ('geeft', 'mij') ('mij', 'een') ('een', 'extra') ('extra', 'stimulan') ('stimulan', 'om') ('om', 'mijn') ('mijn', 'werkzaamheden') ('werkzaamheden', 'go') ('go', 'uit') ('uit', 'te') ('te', 'voeren') ('voeren', 'en') ('en', 'met') 