') ('du', 'is') ('is', 'onz') ('onz', 'Nederlands') ('Nederlands', 'maatschappij') ('maatschappij', 'verbonden') ('verbonden', 'met') ('met', 'ander') ('ander', 'maatschappijen') ('maatschappijen', 'met') ('met', 'al') ('al', 'hun') ('hun', 'culturel') ('culturel', 'facetten') ('facetten', '.') ('.', 'Ook') ('Ook', 'van') ('van', 'recent') ('recent', 'ontwikkelingen') ('ontwikkelingen', 'op') ('op', 'mondiaal') ('mondiaal', 'gebi') ('gebi', 'houd') ('houd', 'ik') ('ik', 'mij') ('mij', 'daarom') ('daarom', 'op') ('op', 'de') ('de', 'hoogt') ('hoogt', '.')