kunnen') ('kunnen', '.') ('.', 'Tijden') ('Tijden', 'de') ('de', 'studi') ('studi', 'zijn') ('zijn', 'wij') ('wij', 'beid') ('beid', 'projectmatig') ('projectmatig', 'al') ('al', 'procesmatig') ('procesmatig', 'bezig') ('bezig', 'geweest') ('geweest', '.') ('.', 'Met') ('Met', 'onderwerpen') ('onderwerpen', 'in') ('in', 'mijn') ('mijn', 'Minor') ('Minor', ',') (',', 'al') ('al', 'communicati') ('communicati', 'en') ('en', 'vertrouwen') ('vertrouwen', 'tussen') ('tussen', 'burger') ('burger', 'en') ('en', 'overheid') ('overheid', ',') (',', 'heb') ('heb', 'ik') ('ik', 'mij') ('mij', 'verder') ('verder', 'verdiept') ('verdiept', 'in') ('in', 'het') ('het', 'proce') ('proce', '.') ('.', 'Ik') ('Ik', 'denk') ('denk', 'dat') ('dat', 'deze') ('deze', 'kwaliteiten') ('kwaliteiten', 'go') ('go', 'van') ('van', 'pa') ('pa', 'zullen') ('zullen', 'komen') ('komen', 'bij') ('bij', 'mijn') ('mijn', 'werk') ('werk', 'voor') ('voor', 'het') ('het', 'Rijk') ('Rijk', '.') ('.', 'De') ('De', 'ruimtelijk') ('ruimtelijk', 'plan') ('plan', 'draait') ('draait', 'voor') ('voor', 'een') ('een', 'belangrijk') ('belangrijk', 'gedeelt') ('gedeelt', 'om') ('om', 'de') ('de', 'belanghebbenden') ('belanghebbenden', '.') ('.', 'Bij') ('Bij', 'beslissingen') ('beslissingen', 'op') ('op', 'Rijksniveau') ('Rijksniveau', 'is') ('is', 'eigenlijk') ('eigenlijk', 'iedereen') ('iedereen', 'een') ('een', 'belanghebbend') ('belanghebbend', '.') ('.', 'Tijden') ('Tijden', 'mijn') ('mijn', 'studi') ('studi', 'heb') ('heb', 'ik') ('ik', 'dat') ('dat', 'snel') ('snel', 'opgepikt') ('opgepikt', 'en') ('en', 'heb') ('heb', 'ik') ('ik', 'mij') ('mij', 'verder') ('verder', 'verdiept') ('verdiept', 'in') ('in', 'de') ('de', 'omgang') ('omgang', 'met') ('met', 'de') ('de', 'burger') ('burger', '.') ('.', 'In') ('In', 'mijn') ('mijn', 'minor') ('minor', 'heb') ('heb', 'ik') ('ik', 'vakken') ('vakken', 'gevolgd') ('gevolgd', 'in') ('in', 'de') ('de', 'Communicatiewetenschappen') ('Communicatiewetenschappen', ',') (','