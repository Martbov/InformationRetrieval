a') ('via', 'gesprekken') ('gesprekken', 'met') ('met', 'leden') ('leden', ',') (',', 'medewerk') ('medewerk', 'en') ('en', 'studenten') ('studenten', 'zelf') ('zelf', '.') ('.', 'Ten') ('Ten', 'derd') ('derd', 'heb') ('heb', 'ik') ('ik', 'een') ('een', 'brede') ('brede', 'interess') ('interess', 'in') ('in', 'maatschappelijk') ('maatschappelijk', 'ontwikkelingen') ('ontwikkelingen', 'en') ('en', 'politiek') ('politiek', ';') (';', 'het') ('het', 'programma') ('programma', 'biedt') ('biedt', 'niet') ('niet', 'alleen') ('alleen', 'de') ('de', 'mogelijkheid') ('mogelijkheid', 'kenni') ('kenni', 'te') ('te', 'maken') ('maken', 'met') ('met', 'een') ('een', 'groot') ('groot', 'aantal') ('aantal', 'vakgebieden') ('vakgebieden', ',') (',', 'maar') ('maar', 'komt') ('komt', 'vooral') ('vooral', 'tegemoet') ('tegemoet', 'aan') ('aan', 'mijn') ('mijn', 'persoonlijk') ('persoonlijk', 'behoeft') ('behoeft', 'om') ('om', 'een') ('een', 'bijdrag') ('bijdrag', 'te') ('te', 'leveren') ('leveren', 'aan') ('aan', 'deze') ('deze', 'maatschappij') ('maatschappij', '.') ('.', 'Al') ('Al', 'student') ('student', 'politicologi') ('politicologi', 'ben') ('ben', 'ik') ('ik', 'mij') ('mij', 'bewust') ('bewust', 'van') ('van', 'de') ('de', 'verschillend') ('verschillend', 'facetten') ('facetten', 'van') ('van', 'deze') ('deze', 'maatschappij') ('maatschappij', '.') ('.', 'Enerzijd') ('Enerzijd', 'zijn') ('zijn', 'er') ('er', 'brede') ('brede', 'ontwikkelingen') ('ontwikkelingen', 'op') ('op', 'nationa') ('nationa', 'en') ('en', 'internationa') ('internationa', 'niveau') ('niveau', ';') (';', 'ik') ('ik', 'volg') ('volg', 'het') ('het', 'nieuw') ('nieuw', 'nauwlettend') ('nauwlettend', 'en') ('en', 'ga') ('ga', 'vaak') ('vaak', 'naar') ('naar', 'lezingen') ('lezingen', 'en') ('en', 'debatten') ('debatten', '.') ('.', 'Mijn') ('Mijn', 'onderzoeksmast') ('onderzoeksmast', 'heeft') ('heeft', 'mij') ('mij', 'veel') ('veel', 'inzicht') ('inzicht', 'in') ('in', 'deze') ('deze', 'ontwikkelingen') ('