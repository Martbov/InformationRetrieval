.') ('.', 'Op') ('Op', 'micro-niveau') ('micro-niveau', 'vormt') ('vormt', 'iedereen') ('iedereen', 'met') ('met', 'zijn/haar') ('zijn/haar', 'gezin') ('gezin', 'een') ('een', 'mini-maatschappij') ('mini-maatschappij', '.') ('.', 'Iet') ('Iet', 'breder') ('breder', 'getrokken') ('getrokken', 'gaat') ('gaat', 'het') ('het', 'om') ('om', 'je') ('je', 'direct') ('direct', 'omgev') ('omgev', 'van') ('van', 'vrienden') ('vrienden', ',') (',', 'studiegenoten') ('studiegenoten', 'en') ('en', 'werkkr') ('werkkr', '.') ('.', 'En') ('En', 'op') ('op', 'het') ('het', 'hoogst') ('hoogst', 'niveau') ('niveau', 'behoort') ('behoort', 'iedereen') ('iedereen', 'tot') ('tot', 'de') ('de', 'maatschappij') ('maatschappij', '.') ('.', 'Op') ('Op', 'ieder') ('ieder', 'niveau') ('niveau', 'kun') ('kun', 'je') ('je', 'invlo') ('invlo', 'uitoefenen') ('uitoefenen', ',') (',', 'op') ('op', 'het') ('het', 'micro-niveau') ('micro-niveau', 'natuurlijk') ('natuurlijk', 'het') ('het', 'meest') ('meest', '.') ('.', 'Veel') ('Veel', 'mensen') ('mensen', 'stoppen') ('stoppen', 'bij') ('bij', 'het') ('het', 'meso-niveau') ('meso-niveau', 'in') ('in', 'de') ('de', 'veronderstel') ('veronderstel', 'dat') ('dat', 'betrokkenheid') ('betrokkenheid', 'bij') ('bij', 'het') ('het', 'groter') ('groter', 'geheel') ('geheel', 'de') ('de', 'spreekwoordelijk') ('spreekwoordelijk', 'druppel') ('druppel', 'op') ('op', 'de') ('de', 'gloeiend') ('gloeiend', 'plaat') ('plaat', 'is') ('is', '.') ('.', 'Daar') ('Daar', 'ben') ('ben', 'ik') ('ik', 'het') ('het', 'niet') ('niet', 'mee') ('mee', 'een') ('een', '.') ('.', 'Want') ('Want', 'ieder') ('ieder', 'druppel') ('druppel', 'vloeit') ('vloeit', 'weer') ('weer', 'terug') ('terug', 'naar') ('naar', 'het') ('het', 'meso-') ('meso-', 'en') ('en', 'micro-niveau') ('micro-niveau', '.') ('.', 'En') ('En', 'du') ('du', 'help') ('help', 'ik') ('ik', 'waar') ('waar', 'ik') ('ik', 'kan.') ('kan.', 'Op') ('Op', 'micro-') ('micro-', ',') (',', 'meso-') ('meso-', 'en') ('en', 'mac