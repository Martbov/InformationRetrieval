ub') ('Club', 'Midden-Brab') ('Midden-Brab', 'intensief') ('intensief', 'bezig') ('bezig', 'geweest') ('geweest', 'met') ('met', 'het') ('het', 'opzetten') ('opzetten', 'van') ('van', 'projecten') ('projecten', 'voor') ('voor', 'goed') ('goed', 'doelen') ('doelen', '.') ('.', 'In') ('In', 'mijn') ('mijn', 'werk') ('werk', 'ben') ('ben', 'ik') ('ik', 'gericht') ('gericht', 'op') ('op', 'beleidsterreinen') ('beleidsterreinen', 'al') ('al', 'opvang') ('opvang', 'van') ('van', 'asielzoek') ('asielzoek', 'en') ('en', 'dak-') ('dak-', 'en') ('en', 'thuislozen') ('thuislozen', ',') (',', 'de') ('de', 'armoedebestrijd') ('armoedebestrijd', ',') (',', 'het') ('het', 'homo-emancipatiebeleid') ('homo-emancipatiebeleid', 'en') ('en', 'maatschappelijk') ('maatschappelijk', 'verantwoord') ('verantwoord', 'ondernemen') ('ondernemen', '.') ('.', 'De') ('De', 'maatschappelijk') ('maatschappelijk', 'betrokkenheid') ('betrokkenheid', 'geeft') ('geeft', 'mij') ('mij', 'voldoen') ('voldoen', '.')