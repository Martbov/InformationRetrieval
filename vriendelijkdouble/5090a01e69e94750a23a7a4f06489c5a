') ('aan', 'het') ('het', 'verbeteren') ('verbeteren', 'van') ('van', 'onz') ('onz', 'maatschappij') ('maatschappij', '.') ('.', 'Het') ('Het', 'werkgebi') ('werkgebi', 'betreft') ('betreft', 'heel') ('heel', 'Nederland') ('Nederland', '(') ('(', 'som') ('som', 'zelf') ('zelf', 'ook') ('ook', 'buiten') ('buiten', 'de') ('de', 'landsgrenzen') ('landsgrenzen', ')') (')', 'en') ('en', 'heeft') ('heeft', 'een') ('een', 'maatschappelijk') ('maatschappelijk', 'belang') ('belang', 'voor') ('voor', 'iedereen') ('iedereen', 'die') ('die', 'hier') ('hier', 'woont') ('woont', '.') ('.', 'De') ('De', 'verantwoordelijkheid') ('verantwoordelijkheid', 'die') ('die', 'hierbij') ('hierbij', 'komt') ('komt', 'kijken') ('kijken', 'geeft') ('geeft', 'een') ('een', 'extra') ('extra', 'impul') ('impul', 'om') ('om', 'go') ('go', 'na') ('na', 'te') ('te', 'denken') ('denken', 'over') ('over', 'wat') ('wat', 'je') ('je', 'aan') ('aan', 'het') ('het', 'doen') ('doen', 'bent') ('bent', 'en') ('en', 'all') ('all', 'te') ('te', 'geven') ('geven', '.') ('.', 'Tijden') ('Tijden', 'mijn') ('mijn', 'studi') ('studi', 'stond') ('stond', 'voedsel') ('voedsel', 'centraal') ('centraal', ',') (',', 'maar') ('maar', 'de') ('de', 'meest') ('meest', 'interessant') ('interessant', 'vakken') ('vakken', 'gingen') ('gingen', 'over') ('over', 'voedsel') ('voedsel', 'en') ('en', 'gezondheid') ('gezondheid', '.') ('.', 'Bijv') ('Bijv', '.') ('.', 'de') ('de', 'regelgev') ('regelgev', 'omtrent') ('omtrent', 'gezondheidclaim') ('gezondheidclaim', 'op') ('op', 'verpakkingen') ('verpakkingen', 'of') ('of', 'de') ('de', 'waarborg') ('waarborg', 'van') ('van', 'voedselveiligheid') ('voedselveiligheid', '.') ('.', 'Ook') ('Ook', 'voedsel') ('voedsel', 'in') ('in', 'combinati') ('combinati', 'met') ('met', 'communicati') ('communicati', ';') (';', 'hoe') ('hoe', 'krijg') ('krijg', 'je') ('je', 'mensen') ('mensen', 'aan') ('aan', 'een') ('een', 'gezond') ('gezond', 'voedselpatroon') ('voedselpatroon', '.') ('.', 'Verder'