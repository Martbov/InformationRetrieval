at') ('omdat', 'ik') ('ik', 'het') ('het', 'mooi') ('mooi', 'vind') ('vind', 'mensen') ('mensen', 'te') ('te', 'ontmoeten') ('ontmoeten', ',') (',', 'er') ('er', 'voor') ('voor', 'ze') ('ze', 'te') ('te', 'zijn') ('zijn', ',') (',', 'te') ('te', 'lachen') ('lachen', 'en') ('en', 'te') ('te', 'huilen') ('huilen', ',') (',', 'om') ('om', 'te') ('te', 'discussiëren') ('discussiëren', 'over') ('over', 'hoe') ('hoe', 'we') ('we', 'samen') ('samen', 'moeten') ('moeten', 'leven') ('leven', '.') ('.', 'Dat') ('Dat', 'is') ('is', 'het') ('het', 'ware') ('ware', ',') (',', 'zij') ('zij', 'het') ('het', 'publiek') ('publiek', ',') (',', 'leven') ('leven', '.')