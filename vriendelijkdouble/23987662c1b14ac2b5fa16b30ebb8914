mij') ('mij', 'geeft') ('geeft', '.') ('.', 'Bij') ('Bij', 'de') ('de', 'overheid') ('overheid', 'lijkt') ('lijkt', 'mij') ('mij', 'de') ('de', 'inhoud') ('inhoud', 'complex') ('complex', 'en') ('en', 'interess') ('interess', 'en') ('en', 'de') ('de', 'voldoen') ('voldoen', 'van') ('van', 'nut') ('nut', 'te') ('te', 'zijn') ('zijn', 'voor') ('voor', 'de') ('de', 'maatschappij') ('maatschappij', 'zeer') ('zeer', 'groot') ('groot', '.') ('.', 'Wat') ('Wat', 'ik') ('ik', 'mist') ('mist', 'in') ('in', 'mijn') ('mijn', 'studi') ('studi', ',') (',', 'meen') ('meen', 'ik') ('ik', 'te') ('te', 'kunnen') ('kunnen', 'vinden') ('vinden', 'bij') ('bij', 'het') ('het', 'Rijkstraineeship') ('Rijkstraineeship', '.') ('.', 'In') ('In', 'het') ('het', 'verleden') ('verleden', 'heb') ('heb', 'ik') ('ik', 'deze') ('deze', 'maatschappijgericht') ('maatschappijgericht', 'interess') ('interess', 'al') ('al', 'vormgegeven') ('vormgegeven', '.') ('.', 'Zo') ('Zo', 'heb') ('heb', 'ik') ('ik', 'een') ('een', 'jaar') ('jaar', 'Nederland') ('Nederland', 'gestudeerd') ('gestudeerd', 'en') ('en', 'een') ('een', 'aantal') ('aantal', 'vakken') ('vakken', 'Turk') ('Turk', 'gevolgd') ('gevolgd', '.') ('.', 'Mijn') ('Mijn', 'maatschappelijk') ('maatschappelijk', 'betrokkenheid') ('betrokkenheid', 'blijkt') ('blijkt', 'o.a') ('o.a', '.') ('.', 'uit') ('uit', 'mijn') ('mijn', 'betrokkenheid') ('betrokkenheid', 'in') ('in', 'de') ('de', 'verenigingen') ('verenigingen', 'waar') ('waar', 'ik') ('ik', 'lid') ('lid', 'van') ('van', 'ben') ('ben', 'geweest') ('geweest', 'en') ('en', 'het') ('het', 'vrijwilligerswerk') ('vrijwilligerswerk', 'dat') ('dat', 'ik') ('ik', 'er') ('er', 'heb') ('heb', 'gedaan') ('gedaan', '.') ('.', 'Ik') ('Ik', 'heb') ('heb', 'bij') ('bij', 'de') ('de', 'studentenverenig') ('studentenverenig', 'Augustinu') ('Augustinu', 'een') ('een', 'jaar') ('jaar', 'lang') ('lang', 'in') ('in', 'de') ('de', 'restaurantcommissi') ('restaurantcommissi', 'gezeten') ('gezeten', ',') (',', 'die') ('