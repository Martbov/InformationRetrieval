i') ('gebi', 'van') ('van', 'beleidsvorm') ('beleidsvorm', 'in') ('in', 'Nederland') ('Nederland', '.') ('.', 'Het') ('Het', 'is') ('is', 'immer') ('immer', 'belangrijk') ('belangrijk', 'te') ('te', 'weten') ('weten', 'hoe') ('hoe', 'Nederlands') ('Nederlands', 'standpunten') ('standpunten', 'zich') ('zich', 'vormen') ('vormen', ',') (',', 'voordat') ('voordat', 'deze') ('deze', 'in') ('in', 'het') ('het', 'buitenland') ('buitenland', 'aan') ('aan', 'de') ('de', 'man') ('man', 'worden') ('worden', 'gebracht') ('gebracht', '.') ('.', 'Hieruit') ('Hieruit', 'voortvloeiend') ('voortvloeiend', 'behoeft') ('behoeft', 'het') ('het', 'weinig') ('weinig', 'verder') ('verder', 'uitleg') ('uitleg', 'dat') ('dat', 'mijn') ('mijn', 'specifiek') ('specifiek', 'interess') ('interess', 'uitgaat') ('uitgaat', 'naar') ('naar', 'een') ('een', 'plaats') ('plaats', 'bij') ('bij', 'een') ('een', '¿internationale¿') ('¿internationale¿', 'directi') ('directi', '.') ('.', 'Mijn') ('Mijn', 'maatschappelijk') ('maatschappelijk', 'betrokkenheid') ('betrokkenheid', 'laat') ('laat', 'zich') ('zich', 'aantonen') ('aantonen', 'via') ('via', 'de') ('de', 'activiteiten') ('activiteiten', 'die') ('die', 'ik') ('ik', 'naast') ('naast', 'mijn') ('mijn', 'studi') ('studi', 'heb') ('heb', 'ontplooid') ('ontplooid', '.') ('.', 'Ik') ('Ik', 'heb') ('heb', 'twee') ('twee', 'jaar') ('jaar', 'geleden') ('geleden', 'plaat') ('plaat', 'genomen') ('genomen', 'in') ('in', 'het') ('het', 'bestuur') ('bestuur', 'van') ('van', 'een') ('een', 'studieverenig') ('studieverenig', 'die') ('die', 'studenten') ('studenten', 'afvaardigt') ('afvaardigt', 'naar') ('naar', 'international') ('international', 'conferenti') ('conferenti', 'waar') ('waar', 'simulati') ('simulati', 'van') ('van', 'de') ('de', 'VN') ('VN', 'worden') ('worden', 'gedaan') ('gedaan', '.') ('.', 'Ook') ('Ook', 'heb') ('heb', 'ik') ('ik', 'tweemaal') ('tweemaal', 'aan') ('aan', 'een') ('een', 'dergelijk') ('dergelijk', 'conferenti') ('conferenti', 'deel