') ('die', 'ik') ('ik', 'heb') ('heb', 'opgedaan') ('opgedaan', 'tijden') ('tijden', 'mijn') ('mijn', 'opleid') ('opleid', ',') (',', 'zou') ('zou', 'ik') ('ik', 'graag') ('graag', 'verder') ('verder', 'willen') ('willen', 'uitbreiden') ('uitbreiden', 'en') ('en', 'omzetten') ('omzetten', 'in') ('in', 'praktijkervar') ('praktijkervar', '.') ('.', 'Ik') ('Ik', 'denk') ('denk', 'dat') ('dat', 'het') ('het', 'Rijkstraineeprogramma') ('Rijkstraineeprogramma', 'een') ('een', 'goed') ('goed', 'combinati') ('combinati', 'van') ('van', 'kennisuitbreid') ('kennisuitbreid', 'en') ('en', 'praktijkervar') ('praktijkervar', 'voor') ('voor', 'mij') ('mij', 'zal') ('zal', 'zijn') ('zijn', '.') ('.', 'Zoal') ('Zoal', 'hierboven') ('hierboven', 'beschreven') ('beschreven', ',') (',', 'ben') ('ben', 'ik') ('ik', 'altijd') ('altijd', 'erg') ('erg', 'maatschappelijk') ('maatschappelijk', 'betrokken') ('betrokken', 'geweest') ('geweest', '.') ('.', 'Ik') ('Ik', 'hou') ('hou', 'de') ('de', 'gebeurtenissen') ('gebeurtenissen', 'in') ('in', 'de') ('de', 'Nederlands') ('Nederlands', 'samenlev') ('samenlev', 'go') ('go', 'in') ('in', 'de') ('de', 'gaten') ('gaten', 'en') ('en', 'heb') ('heb', 'me') ('me', 'altijd') ('altijd', 'al') ('al', 'willen') ('willen', 'inzetten') ('inzetten', 'voor') ('voor', 'de') ('de', 'Nederlands') ('Nederlands', 'maatschappij') ('maatschappij', ',') (',', 'om') ('om', 'zo') ('zo', 'problemen') ('problemen', 'binnen') ('binnen', 'de') ('de', 'maatschappij') ('maatschappij', 'op') ('op', 'te') ('te', 'lossen') ('lossen', '.') ('.', 'Ik') ('Ik', 'vind') ('vind', 'het') ('het', 'namelijk') ('namelijk', 'erg') ('erg', 'belangrijk') ('belangrijk', 'dat') ('dat', 'ik') ('ik', ',') (',', 'al') ('al', 'burger') ('burger', 'in') ('in', 'Nederland') ('Nederland', ',') (',', 'niet') ('niet', 'alleen') ('alleen', 'moet') ('moet', 'klagen') ('klagen', 'over') ('over', 'de') ('de', 'minder') ('minder', 'goed') ('goed', 'dingen') ('dingen', 'van') ('van', 'de') ('de', 'maatscha